<%- include('../templates/head') %>

<body>
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="form-container">
          <h2 class="form-title">Modificar Tarea</h2>

          <form action="/tarea/modificar" method="POST">
            <input type="hidden" name="id" value="<%= tarea.id_tarea %>">
            <div class="mb-3">
              <label for="titulo" class="form-label">Título</label>
              <input type="text" class="form-control" id="titulo" name="titulo" required value="<%= tarea.titulo %>">
            </div>


            <div class="mb-3">
              <label for="descripcion" class="form-label">Descripción:</label>
              <textarea class="form-control" id="descripcion" name="descripcion" rows="4"><%= tarea.descripcion %></textarea>
            </div>

            <div class="d-flex justify-content-between btn-actions">
              <a href="/" class="btn btn-danger btn-sm">Cancelar</a>
              <button type="submit" class="btn btn-primary">Actualizar Tarea</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

</body>

<%- include('../templates/footer') %>