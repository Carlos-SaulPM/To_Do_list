<%- include('../templates/head') %>
<link rel="stylesheet" href="/css/main.css">
<body>
  <section class="vh-100 auth-bg register-bg">
    <div class="mask d-flex align-items-center h-100 auth-overlay">
      <div class="container h-100 py-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-12 col-md-9 col-lg-7 col-xl-6">
            <div class="card auth-card">
              <div class="card-body p-4 p-md-5">
                <h2 class="text-uppercase text-center mb-4 auth-title">
                  <i class="fas fa-book-open me-2"></i>Registro
                </h2>

                <form method="post" action="/register" class="auth-form">

                  <div class="form-floating">
                    <input type="text" id="nombre" class="form-control" name="nombre" placeholder="Nombre" required>
                    <label for="nombre">Nombre</label>
                  </div>
                  
                  <div class="form-floating">
                    <input type="text" id="apellidoPaterno" class="form-control" name="apellidoPaterno" placeholder="Apellido paterno" required>
                    <label for="apellidoPaterno">Apellido paterno</label>
                  </div>
                  
                  <div class="form-floating">
                    <input type="text" id="apellidoMaterno" class="form-control" name="apellidoMaterno" placeholder="Apellido materno">
                    <label for="apellidoMaterno">Apellido materno</label>
                  </div>
                  
                  <div class="form-floating">
                    <input type="date" id="fechaNacimiento" class="form-control" name="fechaNacimiento" required>
                    <label for="fechaNacimiento">Fecha de nacimiento</label>
                  </div>

                  <div class="form-floating">
                    <input type="email" id="correo" class="form-control" name="correo" placeholder="Correo electrónico" required>
                    <label for="correo">Correo electrónico</label>
                  </div>

                  <div class="form-floating mb-4">
                    <input type="password" id="password" class="form-control" name="password" placeholder="Contraseña" required>
                    <label for="password">Contraseña</label>
                  </div>
                  
                  <div class="d-grid gap-2 mb-3">
                    <button type="submit" class="btn text-white auth-btn">
                      <i class="fas fa-user-plus me-2"></i>Registrarse
                    </button>
                  </div>
                  
                  <p class="text-center text-muted mt-3 mb-0">¿Ya tienes una cuenta? 
                    <a href="/login" class="fw-bold auth-link"><u>Iniciar sesión</u></a>
                  </p>

                </form>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</body>
<%- include('../templates/footer') %>